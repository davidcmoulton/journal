elifePipeline {
    stage 'Checkout'
    checkout scm
    def commit = elifeGitRevision()

    stage 'Project tests'
    def testArtifact = "${env.BUILD_TAG}.junit.xml"
    builderDeployRevision 'journal--ci', commit
    builderProjectTests 'journal--ci', '/srv/journal'
    builderTestArtifact testArtifact, 'journal--ci', '/srv/journal/build/phpunit.xml'
    elifeVerifyJunitXml testArtifact

    stage 'Deploy on end2end'
    builderDeployRevision 'journal--end2end', commit

    stage 'Approval'
    elifeGitMoveToBranch commit, 'approved'
}

{
    "name": "elife/journal",
    "type": "project",
    "license": "GPL-3.0+",
    "autoload": {
        "psr-4": {
            "eLife\\Journal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "test\\eLife\\Journal\\": "test/"
        }
    },
    "require": {
        "php": "^7.0",
        "bobthecow/mustache-bundle": "^1.2",
        "cweagans/composer-patches": "^1.5",
        "elife/patterns": "dev-master",
        "guzzlehttp/promises": "^1.2",
        "puli/repository": "^1.0-beta10",
        "puli/symfony-bundle": "^1.0-beta10",
        "puli/twig-extension": "^1.0-beta8",
        "puli/url-generator": "^1.0-beta4",
        "sensio/distribution-bundle": "^5.0",
        "symfony/monolog-bundle": "^2.11",
        "symfony/symfony": "^3.1",
        "twig/twig": "^1.24"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.4"
    },
    "minimum-stability": "beta",
    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets"
        ]
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "patches": {
            "bobthecow/mustache-bundle": {
                "Remove superfluous argument": "https://github.com/bobthecow/BobthecowMustacheBundle/pull/9.patch"
            }
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:elifesciences/patterns-php.git"
        }
    ]
}
